1.创建基础表 来自 HOTSEARCH_WORDS
CREATE TABLE APPSTORE.HOTSEARCH_WORDS(
DAY VARCHAR NOT NULL,
UPDATETIME VARCHAR NOT NULL,
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
HOTWORD VARCHAR NOT NULL,
RANKING INTEGER NOT NULL,
CONSTRAINT pk PRIMARY KEY (DAY,UPDATETIME, COUNTRY, DEVICE,HOTWORD,RANKING)) SALT_BUCKETS = 20;

2.创建关联APP表 来自  HOTSEARCH_TOP100
CREATE TABLE APPSTORE.HOTSEARCH_TOP100(
DAY VARCHAR NOT NULL,
UPDATETIME VARCHAR NOT NULL,
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
HOTWORD VARCHAR NOT NULL,
APPID VARCHAR  NOT NULL ,
RANKING INTEGER,
CONSTRAINT pk PRIMARY KEY (DAY,UPDATETIME, COUNTRY, DEVICE,HOTWORD, APPID )) SALT_BUCKETS = 20;


3.创建联想词表 来自  HOTSEARCH_RELATED
CREATE TABLE APPSTORE.HOTSEARCH_RELATED(
DAY VARCHAR NOT NULL,
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
HOTWORD VARCHAR NOT NULL,
RANKING INTEGER NOT NULL,
UPDATETIME VARCHAR,
SEARCHINDEX INTEGER,
RELATEDWORD VARCHAR,
CONSTRAINT pk PRIMARY KEY (DAY,COUNTRY, DEVICE,HOTWORD, RANKING)) SALT_BUCKETS = 20;

================================================================

4.app排行表 来自 RANK_TOP100
CREATE TABLE APPSTORE.RANK_TOP100(
DAY VARCHAR NOT NULL,
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
LISTCATEGORY VARCHAR NOT NULL,
APPCATEGORY VARCHAR NOT NULL,
RANKING INTEGER NOT NULL,
APPID VARCHAR,
UPDATETIME VARCHAR,
CONSTRAINT pk PRIMARY KEY ( DAY, COUNTRY, DEVICE, LISTCATEGORY, APPCATEGORY,RANKING)) SALT_BUCKETS = 20;

================================================================
5.app排行表 来自 RANK_TOP100  时间最大的数据
CREATE TABLE APPSTORE.RANK_TOP100_CURRENT(
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
LISTCATEGORY VARCHAR NOT NULL,
APPCATEGORY VARCHAR NOT NULL,
RANKING INTEGER NOT NULL,
APPID VARCHAR,
UPDATETIME VARCHAR,
CONSTRAINT pk PRIMARY KEY (COUNTRY, DEVICE, LISTCATEGORY, APPCATEGORY,RANKING)) SALT_BUCKETS = 20;

================================================================
6.app排行表 来自 RANK_TOP100  时间最大的数据
CREATE TABLE APPSTORE.SEARCH_INDEX_LIST(
DAY VARCHAR NOT NULL,
COUNTRY VARCHAR NOT NULL,
DEVICE VARCHAR NOT NULL,
KEYWORD VARCHAR NOT NULL,
SEARCHINDEX INTEGER,
RESULTCOUNT INTEGER,
UPDATETIME VARCHAR,
CONSTRAINT pk PRIMARY KEY (DAY,COUNTRY,DEVICE,KEYWORD)) SALT_BUCKETS = 20;

================================================================
7.app详情表 来自 App_detail  可以加其他字段
CREATE TABLE APPSTORE.APP_DETAIL(
COUNTRY VARCHAR NOT NULL,
APPID VARCHAR,
GENRENAMES VARCHAR,
APPNAME VARCHAR,
APPIMG VARCHAR,
COMPANYNAME VARCHAR,
CUSTOMERSALSOBOUGHT VARCHAR,
TOP_APPS VARCHAR,
DETAILS VARCHAR,
UPDATETIME VARCHAR,
CONSTRAINT pk PRIMARY KEY (COUNTRY,APPID)) SALT_BUCKETS = 20;